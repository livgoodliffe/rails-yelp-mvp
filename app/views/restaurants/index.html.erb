<h1>Restaurants</h1>

  <div class="container">
    <div class="row">
        <% @restaurants.each do |restaurant| %>
          <div class="card text-center m-2" style="width: 18rem;">
            <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
            <div class="card-body">
              <h6 class="card-subtitle mb-2"><%= restaurant.category.capitalize %></h6>
              <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.address %></h6>
              <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.phone_number %></h6>
            </div>
            <p class="card-footer"><%= link_to "Review", new_restaurant_review_path(restaurant), class: "btn text-white", style:"background-color: #6ea4f7;" %></p>
          </div>
        <% end %>
    </div>
  </div>

<%= link_to "Add a restaurant", new_restaurant_path,
  class: "btn text-white", style:"background-color: #6ea4f7;" %>
